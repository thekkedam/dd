<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

    {% for post in site.posts %}
    <url>
        <loc>http://{{ site.data.config.domain }}{{ post.url | remove: 'index.html' }}</loc>
    </url>
    {% endfor %}

    {% for page in site.pages %}
    {% if page.layout != nil %}
    {% if page.layout != 'feed' %}
    <url>
        <loc>http://{{ site.data.config.domain }}{{ page.url | remove: 'index.html' }}</loc>
    </url>
    {% endif %}
    {% endif %}
    {% endfor %}

    {% for project in site.data.projects %}
    {% if project.doc_url != nil %}
    {% if project.doc_url contains "/files" first %}
    <url>
	<loc>http://{{ site.data.config.domain }}{{ project.doc_url }}</loc>
    </url>
    {% endif %}
    {% endif %}
    {% endfor %}

    <url>
	<loc>http://{{ site.data.config.domain }}{{ site.data.config.pdfresume }}</loc>
    </url>

</urlset>
