<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.google.com/schemas/sitemap/0.9">
    <!-- Posta -->
    {% for post in site.posts %}
    <url>
        <loc>http://{{ site.data.config.domain }}{{ post.url | remove: 'index.html' }}</loc>
	<lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
	<changefreq>monthly</changefreq>
	<priority>0.5</priority>
    </url>
    {% endfor %}
    <!-- Pages -->
    {% for page in site.pages %}
    {% if page.layout != nil %}
    {% if page.layout != 'feed' %}
    <url>
        <loc>http://{{ site.data.config.domain }}{{ page.url | remove: 'index.html' }}</loc>
	<lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
	<changefreq>weekly</changefreq>
	<priority>0.5</priority>
    </url>
    {% endif %}
    {% endif %}
    {% endfor %}
    <!-- Project documents -->
    {% for project in site.data.projects %}
    {% if project.doc_url != nil %}
    {% if project.doc_url contains "/files" first %}
    <url>
	<loc>http://{{ site.data.config.domain }}{{ project.doc_url }}</loc>
	<lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
	<changefreq>never</changefreq>
	<priority>0.5</priority>
    </url>
    {% endif %}
    {% endif %}
    {% endfor %}
    <!-- Publications documents -->
    {% for section_hash in site.data.publications %}
      {% for section in section_hash %}
        {% for pubtext in section %}
          {% if pubtext.pdf != nil %}
            {% if pubtext.pdf contains "/files" first %}
              <url>
                <loc>http://{{ site.data.config.domain }}{{ pubtext.pdf }}</loc>
                <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
                <changefreq>never</changefreq>
                <priority>0.5</priority>
              </url>
            {% endif %}
          {% endif %}
        {% endfor %}
      {% endfor %}
    {% endfor %}
    <!-- Resume -->
    <url>
	<loc>http://{{ site.data.config.domain }}{{ site.data.config.pdfresume }}</loc>
	<lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
	<changefreq>weekly</changefreq>
	<priority>0.5</priority>
    </url>

</urlset>
